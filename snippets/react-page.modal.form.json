{
	"snippets-react-page-modal-form": {
		"prefix": "react:page.modal.form",
		"body": [
			"import React, { useState,useEffect,forwardRef,useImperativeHandle} from 'react'",
			"import { Modal ,Form} from 'antd'",
			"import {useTableFilterLayout} from 'hooks';",
			"",
			"export default  forwardRef((props,ref) => {",
			"  const [visible,setVisible] = useState(false);",
			"  const [form] = Form.useForm();",
			"  const { colLayout ,ItemLayout} = useTableFilterLayout({cols:1,labelWrapers:[6,12]})",
			"",
			"  useImperativeHandle(ref,()=>{",
			"    return {",
			"      setVisible",
			"      form",
			"    }",
			"  },[form]);",
			"",
			"  const formProps = {",
			"    form,",
			"    initialValues:{},",
			"    onFinish(values){",
			"      console.log('values',values);",
			"    }",
			"  }",
			"  const ColFormItem = useMemo(()=>{",
			"    return (props)=> <Col  {...colLayout}> <Form.Item {...ItemLayout} {...props}/> </Col>",
			"  },[colLayout,ItemLayout ])",
			"",
			"  return <Modal title={'-----'}",
      "              visible={visible}",
      "              onOk={()=>{}}",
      "              onCancel={()=>{setVisible(false)}}",
      "              okText='确定'",
      "              cancelText='取消'",
      "  >",
			"  <Form {...formProps} >",
      "    <ColFormItem cols={1} label={'----'} name={'name'} rules={[]}>",
			"       <Input placeholder={'----'}  />",
      "    </ColFormItem>",
    	"   </Form>",
			"  </Modal>",
			"})"
		],
		"description": "快速输出React:Page.Modal.Form 页面"
	}
}